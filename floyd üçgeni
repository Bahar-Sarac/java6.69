
import java.util.Scanner;

public class floyducgeni {

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        System.out.println("Satır sayısı giriniz:");
        int n = input.nextInt();
        int sayac = 1;
        for (int i = 1; i <= n; i++) {
            for (int j = 1; j <= i; j++) {
                System.out.print(sayac+" ");
                sayac += sayac;
            }
            System.out.println(" ");
        }
    }

}
